<div class="edit-password-frame">

  <%= render 'partial/header/header_new_edit' %>

  <div class="edit-password-container">

    <div class="edit-password-container-inner">
      <p><%= "ユーザー名：" + @user.name %></p>
      <p><%= "登録メールアドレス："+@user.email %></p>

      <p class="edit-password-text">新パスワードを入力してください</p>

      <%= form_with model:@user , url: reset_password_path(@user), local: true , class: "password-edit-form" do |f| %>

        <%= f.hidden_field :id , value:@user.id %>

        <div class="edit-password">
          <%= f.label :パスワード , class:"edit-password-label"%>
          <%= f.password_field :password , 
          class: "edit-password-input", 
          minlength:6 , maxlength:12 ,
          placeholder: "6文字~12文字以内 半角英数字のみ" %>
        </div>
  
        <div class="edit-password-actions2">
          <%= f.submit "パスワード更新" %>
        </div>
      <% end %>
    </div>
  </div>
</div>



